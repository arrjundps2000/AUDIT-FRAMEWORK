<%- include('partials/header') %>
<%- include('partials/navbar') %>
<div class="jumbotron text-center">
  <div class="container">
    <i><img src="audit.png" alt="hi" width="100" height="100"></i>
    <h1 class="display-3">Services</h1>
    <hr>
    <div class="d-grid gap-2 col-6 mx-auto">
      <a class="btn btn-warning btn-lg" href="/all_stocks" role="button">Show Inventories</a>
    </div>
    <hr>
    <div class="d-grid gap-2 col-6 mx-auto">
      <a class="btn btn-warning btn-lg" data-bs-toggle="collapse" href="#collapseExample1" role="button" aria-expanded="false" aria-controls="collapseExample">
        Search Inventory
      </a>
    </div>
    <div class="collapse" id="collapseExample1">
      <br>
      <br>
      <form action="/search_stock" method="POST">
        <input class="form-control" name="stock_name" placeholder="Inventory ID">
        <br>
        <button type="submit" class="btn btn-dark btn-lg">Search</button>
      </form>
    </div>
    <hr>
    <div class="d-grid gap-2 col-6 mx-auto">
      <a class="btn btn-warning btn-lg" data-bs-toggle="collapse" href="#collapseExample2" role="button" aria-expanded="false" aria-controls="collapseExample">
        Add Inventory
      </a>
    </div>
    <div class="collapse" id="collapseExample2">
      <br>
      <br>
      <form action="/api_add" method="POST">
        <input class="form-control" name="stockName" placeholder="Inventory Name">
        <br>
        <input class="form-control" name="stockType" placeholder="Inventory Type">
        <br>
        <input class="form-control" name="stockPrice" placeholder="Inventory Price">
        <br>
        <input class="form-control" name="stockQuantity" placeholder="Inventory Quantity">
        <br>
        <button type="submit" class="btn btn-dark btn-lg">Add</button>
        <br>
      </form>
    </div>
    <hr>
    <div class="d-grid gap-2 col-6 mx-auto">
      <a class="btn btn-warning btn-lg" data-bs-toggle="collapse" href="#collapseExample3" role="button" aria-expanded="false" aria-controls="collapseExample">
        Update Inventory
      </a>
    </div>
    <div class="collapse" id="collapseExample3">
      <br>
      <br>
      <form action="/api_update" method="POST">
        <input class="form-control" name="stockId" placeholder="Inventory Id">
        <br>
        <input class="form-control" name="stockName" placeholder="Inventory Name">
        <br>
        <input class="form-control" name="stockType" placeholder="Inventory Type">
        <br>
        <input class="form-control" name="stockPrice" placeholder="Inventory Price">
        <br>
        <input class="form-control" name="stockQuantity" placeholder="Inventory Quantity">
        <br>
        <button type="submit" class="btn btn-dark btn-lg">Update</button>
        <br>
      </form>
    </div>
    <hr>
    <div class="d-grid gap-2 col-6 mx-auto">
      <a class="btn btn-warning btn-lg" data-bs-toggle="collapse" href="#collapseExample4" role="button" aria-expanded="false" aria-controls="collapseExample">
        Delete Inventory
      </a>
    </div>
    <div class="collapse" id="collapseExample4">
      <br>
      <br>
      <form action="/delete_stock" method="POST">
        <input class="form-control" name="stock_name" placeholder="Inventory ID">
        <br>
        <button type="submit" class="btn btn-dark btn-lg">Delete</button>
      </form>
    </div>
    <hr>
    <br>
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/myLog" role="button">My Log</a>
  </div>
</div>

<%- include('partials/footer') %>
